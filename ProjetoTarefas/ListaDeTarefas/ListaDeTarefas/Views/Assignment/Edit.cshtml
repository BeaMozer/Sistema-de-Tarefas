@model Assignment

<div class="mt-5 mb-4">
    <h2>Editar Tarefa</h2>
</div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="AssignmentId" />

    <div class="row">
        <div class="form-group mb-3 col-4">
            <label asp-for="AssignmentName" class="control-label"></label>
            <input asp-for="AssignmentName" class="form-control" />
            <span asp-validation-for="AssignmentName" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group mb-3 col-4">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group mb-3 col-4">
            <label asp-for="StartDate" class="control-label"></label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
        </div>
        </div>

        @*     <div class="form-group mb-2">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
        </div> *@

        <div class="row">
            <div class="form-group mb-3 col-4">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Por fazer">Por fazer</option>
                    <option value="Feito">Feito</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-success">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>